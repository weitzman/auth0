{#
/**
 * @file
 * Default theme implementation to display a link to login at Auth0
 *
 * Available variables:
 * - callback_url: The callback URL that Auth0 should hit to report login success/failure
 * - domain: The API key domain
 * - client_id: The client ID
 *
 * @see template_preprocess_auth0_login()
 *
 * @ingroup themeable
 */
#}
<script>
  var lock = new Auth0Lock("{{ client_id }}", "{{ domain }}", {
    auth: {
      redirectUrl: '{{ callback_url }}',
      responseType: 'code',
      params: {
        scope: 'openid email' // Learn about scopes: https://auth0.com/docs/scopes
      }
    }
  });
  lock.show();
</script>
